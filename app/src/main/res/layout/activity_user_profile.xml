<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".userProfileActivity"
        android:background="#fff">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
            android:layout_marginTop="5dp"
        android:paddingTop="10dp"
            android:paddingBottom="30dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:civ_border_overlay="false"
            app:civ_border_color="@color/purple_200"
            android:src="@drawable/blank_profile_picture_973460__480">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priyanka"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                />
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/purple_200"
                android:layout_marginTop="10dp"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_person"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    />
            <TextView
                    android:id="@+id/uprofile_fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Priyanka"
                    android:layout_marginLeft="25dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />



        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/cardview_light_background"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_person"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    />
            <TextView
                    android:id="@+id/uprofile_lname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poreddy"
                    android:layout_marginLeft="25dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />



        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/cardview_light_background"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_email"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    />
            <TextView
                    android:id="@+id/uprofile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="priyanka@gmail.com"
                    android:layout_marginLeft="70dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />



        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/cardview_light_background"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_contact_phone_24"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    />
            <TextView
                    android:id="@+id/uprofile_phn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8899889988"
                    android:layout_marginLeft="70dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />



        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/cardview_light_background"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/uprofile_edit"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_btn"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_baseline_edit"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Edit Profile"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/uprofile_editPwd"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_btn"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_baseline_password"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Change Password"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            <ProgressBar
                    android:id="@+id/uprofile_prgrsbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_marginTop="5dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
            android:id="@+id/uprofile_save"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="300dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="Save"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
</LinearLayout>