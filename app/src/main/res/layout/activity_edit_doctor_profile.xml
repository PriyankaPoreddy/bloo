<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
    tools:context=".DoctorDetails.EditDoctorProfile">
    <include
            android:id="@+id/doctor_editProfile_toolbar"
            layout="@layout/applicationbar" />

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/background" />

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@mipmap/doctor_image"
                app:civ_border_color="#27424D"
                app:civ_border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="70dp"
                android:src="@mipmap/edit_image" />

    </FrameLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <TextView
                        android:id="@+id/edit_dr_name"
                        style="@style/Base.TextAppearance.AppCompat.Large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="update"
                        android:text="Doctor Name"
                        android:textColor="#3949AB"
                        android:textStyle="bold" />

                <ImageView
                        android:id="@+id/edit_drname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:onClick="update"
                        android:src="@drawable/ic_baseline_mode_edit" />
            </LinearLayout>

            <TextView
                    android:id="@+id/edit_dr_specialization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Specialization" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Experience"
                            android:textColor="#3949AB"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/edit_dr_experiance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="5 Years" />

                    <ImageView
                            android:id="@+id/edit_drexperiance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="update"
                            android:src="@drawable/ic_baseline_mode_edit" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Education"
                            android:textColor="#3949AB"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/edit_dr_education"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="MBBS,MD (MED)" />

                    <ImageView
                            android:id="@+id/edit_dreducation"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="update"
                            android:src="@drawable/ic_baseline_mode_edit" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Email"
                            android:textColor="#3949AB"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/edit_dr_email"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="abfj@gmail.com" />

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_mode_edit"
                            android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Age"
                            android:textColor="#3949AB"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/edit_dr_age"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="45" />

                    <ImageView
                            android:id="@+id/edit_drage"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="update"
                            android:src="@drawable/ic_baseline_mode_edit"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Contact No."
                            android:textColor="#3949AB"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/edit_doctor_contact"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="9137385013" />

                    <ImageView
                            android:id="@+id/edit_drcontact"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="update"
                            android:src="@drawable/ic_baseline_mode_edit" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Address"
                            android:textColor="#3949AB"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/edit_doctor_address"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Bhopal" />

                    <ImageView
                            android:id="@+id/edit_drAddress"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="update"
                            android:src="@drawable/ic_baseline_mode_edit" />
                </LinearLayout>

                <Button
                        android:id="@+id/final_update"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn"
                        android:onClick="update"
                        android:text="Update"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>